# ============================================
# 票遇洲 - 生产环境配置模板
# 复制此文件为 .env 并填入实际值
# ============================================

# 数据库配置
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=piaociyuan

# JWT 配置（使用 openssl rand -hex 64 生成）
JWT_SECRET=your_jwt_secret_here
JWT_ACCESS_EXPIRES=1d
JWT_REFRESH_EXPIRES=7d

# 敏感信息加密密钥（使用 openssl rand -hex 32 生成）
ENCRYPTION_KEY=your_encryption_key_here

# 应用 URL（替换为你的实际域名）
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Redis 密码
REDIS_PASSWORD=your_redis_password_here

# ============================================
# 支付配置（必须）
# ============================================

# 微信支付配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_merchant_id
WECHAT_API_KEY=your_api_key_v2
WECHAT_API_V3_KEY=your_api_key_v3
WECHAT_SERIAL_NO=your_certificate_serial_no
WECHAT_PRIVATE_KEY_PATH=./certs/wechat/apiclient_key.pem
WECHAT_CERT_PATH=./certs/wechat/apiclient_cert.pem
WECHAT_NOTIFY_URL=https://your-domain.com/api/pay/wechat/notify

# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_private_key
ALIPAY_PUBLIC_KEY=alipay_public_key
ALIPAY_NOTIFY_URL=https://your-domain.com/api/pay/alipay/notify
ALIPAY_RETURN_URL=https://your-domain.com/payment/success

# 支付环境（sandbox / production）
PAYMENT_ENV=sandbox

# ============================================
# NFT 功能配置（可选）
# ============================================
NFT_ENABLED=false
BLOCKCHAIN_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_API_KEY
BLOCKCHAIN_CHAIN_ID=80002
NFT_CONTRACT_ADDRESS=
MINT_WALLET_PRIVATE_KEY=

# IPFS 配置（可选）
PINATA_API_KEY=
PINATA_API_SECRET=

# 功能开关
AUTO_MINT_ON_PAYMENT=false
ALLOW_USER_MINT=true
GAS_LIMIT=300000
